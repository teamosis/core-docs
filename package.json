{
  "name": "@teamosis/core-docs",
  "description": "Core documentation setup for ThemeFisher, GetHugoThemes, and More",
  "version": "1.0.71",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "hugo server --disableFastRender",
    "build": "hugo --i18n-warnings --templateMetrics --templateMetricsHints --path-warnings",
    "update": "hugo mod get -u ./... && hugo mod tidy",
    "release": "commit-and-tag-version --release-as patch -a -t \"v\" && ./bin/postrelease.sh",
    "release-next": "commit-and-tag-version --release-as minor -a -t \"v\" && ./bin/postrelease.sh",
    "release-major": "commit-and-tag-version --release-as major -a -t \"v\" && ./bin/postrelease.sh"
  },
  "devDependencies": {
    "@davidsneighbour/standard-version-config": "^5.2.25"
  }
}
